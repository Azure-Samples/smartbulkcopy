<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <targets>
    <target xsi:type="File" name="file" fileName="smartbulkcopy.schemaclone.log" deleteOldFileOnStartup="true" layout="${date}|${callsite:className=false:fileName=false:includeSourcePath=false:methodName=true}|${level:uppercase=true}|${message} ${exception}" />
    <target xsi:type="Console" name="console" layout="${date}|${level:uppercase=true}> ${message} ${exception}" />
  </targets>
  <rules>
    <logger name="*" minlevel="Info" writeTo="console" />
    <logger name="*" minlevel="Debug" writeTo="file" />
  </rules>
</nlog>